
@model IEnumerable<Restaurant.Models.FoodItem>
@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ThumbURL)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShortDesc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.ThumbURL)" width="300px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShortDesc)
            </td>
            <td>
                     @Html.ActionLink("Details", "Details", new { id = item.ID })
</td>
        </tr>
    }
</table>


