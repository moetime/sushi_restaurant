
@model Restaurant.Models.Menu
@{
    ViewBag.Title = "Menu";
}

@foreach (var category in Model.categories) {

    <div class="row menu-banner">
        <h2>@Html.DisplayFor(modelItem => category.Name)s</h2>
    </div>
    <div class="row item-background">
        @foreach (var item in Model.foodItems.Where(x => x.Category.Equals(category))) {


            <div class="col-xs-10 col-xs-offset-1  col-sm-offset-0  col-sm-6 col-md-4  col-lg-3 food-item">
                <div class="thumbnail">
                    <a href="@Url.Action("Details", "Menu", new { id = item.ID })">
                        <img alt="100%x200" data-src="holder.js/100%x200" src="@Html.DisplayFor(modelItem => item.ThumbURL)" data-holder-rendered="true" style="height: 200px; width: 100%; display: block;">
                    </a>

                    <span class="label label-info price-tag">$@Html.DisplayFor(modelItem => item.Price)</span>
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.ShortDesc)</p>
                        <form role="form">

                            <div class="form-group">
                                
                                <input class="input-lg quantity-input" name="quantity" placeholder="Qty" min="1" type="number">
                            </div>
                            <div class="form-group">
                                <a href="@Url.Action("AddToCart", "ShoppingCart", new { id = item.ID })" class="btn btn-primary btn-lg" role="button">Add To Cart</a>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        }

    </div>
}
