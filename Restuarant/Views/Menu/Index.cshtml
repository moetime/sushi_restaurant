
@model IEnumerable<Restaurant.Models.FoodItem>
@{
    ViewBag.Title = "Menu";
}

<h2>Menu</h2>

<div class="row">
        @foreach (var item in Model)
            {
            <div class="col-sm-2 col-md-3">
                <div class="thumbnail">
                    <div style="height: 220px;width:300px;background-image: url('@Html.DisplayFor(modelItem => item.ThumbURL)');" >
                    </div>
                    <div class="caption">
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.ShortDesc)</p>
                        <p><a href="#" class="btn btn-primary" role="button">Button</a> </p>
                    </div>
                </div>

            </div>


        }

</div>


