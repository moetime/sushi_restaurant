@model Restaurant.ViewModels.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}

<h3>
    <em>Review</em> your cart:
</h3>
<p class="button">
    @Html.ActionLink("Checkout >> ", "AddressAndPayment", "Checkout")
</p>
<div id="update-message">
</div>
<table>
    <tr>
        <th>
            Food Item Name
        </th>
        <th>
            Price (each)
        </th>
        <th>
            Quantity
        </th>
        <th></th>
    </tr>
    @foreach (var item in
        Model.CartItems)
    {
        <tr id="row-@item.FoodItem">
            <td>
                @Html.ActionLink(item.FoodItem.Name, "Details", "Store",
                    new { id = item.FoodItemID }, null)
            </td>
            <td>
                @item.FoodItem.Price
            </td>
            <td id="item-count-@item.FoodItem">
                @item.NumItems
            </td>
            <td>
                <a href="#" class="RemoveLink"
                   data-id="@item.FoodItemID">
                    Remove
                    from cart
                </a>
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td></td>
        <td></td>
        <td id="cart-total">
            @Model.CartTotal
        </td>
    </tr>
</table>